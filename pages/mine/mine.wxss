/* pages/mine/mine.wxss */

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}

.top {
  width: 90%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-bottom: 48rpx;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #212121;
  font-size: 50rpx;
}

.tip {
  color: #9e9e9e;
  font-size: 28rpx;
}

.middle {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  padding: 12rpx 0;
  border-radius: 10rpx;
}

.hongbao {
  width: 50rpx;
  height: 50rpx;
}

.qianbao {
  width: 50rpx;
  height: 40rpx;
}

.middle_left, .middle_right {
  width: 40%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 24rpx;
  background-color: white;
  border-radius: 10rpx;
  box-shadow: -2px 3px 20px #f6f6f6;
}

.middle_text_top {
  color: #212121;
  font-size: 32rpx;
}

.middle_text_bottom {
  color: #818181;
  font-size: 24rpx;
}

.bottom {
  width: 100%;
}

.bottom_line {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.bottom_right {
  width: 80%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  border-bottom: 1px solid #f2f2f2;
  padding: 24rpx 24rpx 24rpx 0;
}

.bottom_line .left {
  margin-left: 48rpx;
  width: 50rpx;
  height: 50rpx;
  align-self: center;
}

.bottom_line .right {
  width: 40rpx;
  height: 40rpx;
}
