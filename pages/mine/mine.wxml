<!--pages/mine/mine.wxml-->
<view class="container">
  <view class="top">
    <view top_left>
      <view>
        <text class="userinfo-nickname">{{userInfo.nickName}}</text>
      </view>
      <view>
        <text class="tip">再忙，也要记得吃饭哟~</text>
      </view>
    </view>
    <view top-right>
      <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
    </view>
  </view>
  <view class="middle">
    <view class="middle_left">
      <view>
        <view class="middle_text_top">红包</view>
        <view class="middle_text_bottom">个未使用</view>
      </view>
      <image class="hongbao" src="../icon/hongbao.png"></image>
    </view>
    <view class="middle_right">
      <view>
        <view class="middle_text_top">钱包</view>
        <view class="middle_text_bottom">金币、借钱、福利</view>
      </view>
      <image class="qianbao" src="../icon/qianbao.png"></image>
    </view>
  </view>
  <view class="middle_shadow"></view>
  <view class="bottom">
    <view class="bottom_line">
      <image class="left" src="../icon/shoucang.png"></image>
      <view class="bottom_right">
        <view middle_text_top>我的收藏</view>
        <image class="right" src="../icon/jiantou.png"></image>
      </view>
    </view>
    <view class="bottom_line">
      <image class="left" src="../icon/kefu.png"></image>
      <view class="bottom_right">
        <view middle_text_top>我的客服</view>
        <image class="right" src="../icon/jiantou.png"></image>
      </view>
    </view>
    <view class="bottom_line">
      <image class="left" src="../icon/jiangpin.png"></image>
      <view class="bottom_right">
        <view middle_text_top>推荐有奖</view>
        <image class="right" src="../icon/jiantou.png"></image>
      </view>
    </view>
    <view class="bottom_line">
      <image class="left" src="../icon/hezuo.png"></image>
      <view class="bottom_right">
        <view middle_text_top>商务合作</view>
        <image class="right" src="../icon/jiantou.png"></image>
      </view>
    </view>
    <view class="bottom_line">
      <image class="left" src="../icon/banka.png"></image>
      <view class="bottom_right">
        <view middle_text_top>办卡有礼</view>
        <image class="right" src="../icon/jiantou.png"></image>
      </view>
    </view>
    <view class="bottom_line">
      <image class="left" src="../icon/shezhi.png"></image>
      <view class="bottom_right">
        <view middle_text_top>设置</view>
        <image class="right" src="../icon/jiantou.png"></image>
      </view>
    </view>
  </view>
</view>