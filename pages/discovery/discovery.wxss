.discovery {
  display: flex;
  flex-direction: column;
}
.top {
  display: flex;
  flex-direction: row;
  padding: 24rpx;
  background-color: #FCFCFC;
  border-radius: 38rpx;
  margin: 30rpx 32rpx 24rpx 32rpx;
  align-items: center;
}

.bgr {
  height: 32rpx;
  background-color: #F8F8F8;
}

.middle {
  border-top: 1px solid #EEEEEE;
  padding: 24rpx;
}

.middle_bottom {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  line-height: 100%;
  padding: 24rpx 0;
}

.bottom_top {
  padding: 24rpx;
}

.bottom_bottom {
  margin-left: 48rpx; 
  padding: 32rpx;
  border-bottom: 1px solid #EDEDED;
}

.bottom_bottom view {
  padding: 8rpx;
}

