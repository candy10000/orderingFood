/* 
评价模块的样式
 */

.tap2 .wrapper {
  background-color: #f5f5f5;
  margin-top: 40rpx;
}

.wrapper #appraise {
  background-color: #fff;
  display: flex;
  flex-direction: row;
  width: 100%;
}

.wrapper #appraise .row {
  display: flex;
  flex-direction: row;
}

.wrapper #appraise #left #_left {
  color: #ff6000;
  font-size: 50rpx;
  margin-left: 80rpx;
  margin-right: 40rpx;
  padding-top: 20rpx;
}

.wrapper #appraise #left #_right {
  padding-top: 20rpx;
}

.wrapper #appraise #right {
  margin-left: auto;
  margin-right: 80rpx;
}

.wrapper #appraise #right view {
  margin: 0 18rpx;
}

.wrapper #appraise #right view text {
  color: #666;
  font-size: 22rpx;
  margin-bottom: 10rpx;
}

.wrapper #appraise #right view span {
  color: #666;
  font-size: 36rpx;
}

/* 评论星星的样式 */

#stars_wrapper {
  width: 130rpx;
  height: 30rpx;
}

.stars {
  width: 130rpx;
  height: 30rpx;
  position: relative;
  top: 0;
  left: 0;
  overflow: hidden;
}

.stars image {
  width: 26rpx;
  height: 26rpx;
  float: left;
  white-space: nowrap;
}

.stars view {
  width: 130rpx;
  position: absolute;
}

/* 评论区中的过滤 */

#filter {
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  margin-top: 20rpx;
  padding-left: 40rpx;
  background-color: #fff;
}

#filter .filter_ {
  border-radius: 6rpx;
  color: #6f7a86;
  margin: 10rpx;
  margin-left: 20rpx;
  padding: 12rpx;
  background-color: #ebf5ff;
}

#filter .nav-hover {
  color: black;
  background-color: #2395ff;
}

/* 评价轮播图 */

#user_opinion {
  background-color: #fff;
