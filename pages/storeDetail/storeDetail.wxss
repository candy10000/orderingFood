}

#user_opinion .userInfo #left view {
  text-align: center;
  padding-top: 30rpx;
  padding-left: 20rpx;
}

#user_opinion .userInfo #right {
  padding-left: 150rpx;
  width: 100%;
  height: 200rpx;
}

